#!/usr/bin/env ruby
require 'rubygems'
require 'net/scp'
require 'open-uri'
require 'colorize'
require "safe_yaml/load"
require 'highline/import'
require 'thor'

class Aka < Thor
  include Thor::Actions
  check_unknown_options!
  package_name "aka"

  #
  # TADA
  #
  desc "tada [name]", "generate an alias"
  method_options :last => :boolean,
                :something => :boolean,
                :somethignelse => :boolean,
                :alias => :t
  def tada args
    if yes? "how are you? (yN)"
      puts "ok"
    else
      puts "no"
    end
  end

  #
  # GENERATE
  #
  desc "generate [name]", "generate an alias"
  method_options :last => :boolean, :alias => :g
  def generate args
    result = false
    if options.last?
      result = add(add_last_command(parseARGS(args))) if args
    else
      result = add(parseARGS(args)) if args
      if options.proj? and result == true
        FileUtils.touch("#{Dir.pwd}/.aka")
        add_to_proj(args)
      end
    end
    reload_dot_file if result == true and !options.noreload
  end


  #
  # DESTROY
  #
  desc "destroy [name]", "destroy an alias"
  method_options :force => :boolean, :alias => :d
  def destroy args
    result = remove(args) if args
    unalias_the(args) if !options.nounalias and result == true and args
    reload_dot_file if result == true and !options.noreload
  end


  #
  # FIND
  #
  desc "find [name]", "find an alias"
  method_options :force => :boolean, :alias => :f
  def find

  end

  #
  # EDIT
  #
  desc "edit [name]", "edit an alias"
  method_options :force => :boolean, :alias => :e
  def edit

  end

  desc "list [name]", "list alias"
  method_options :force => :boolean, :alias => :l
  def list

  end

  #
  # INSTALL
  #
  desc "install [name]", "install aka"
  method_options :force => :boolean
  def install

  end

  #
  # INIT
  #
  desc "init", "initiate aka"
  def init

  end

  #
  # PRIVATE METHODS
  #

  private

  def setPath(path, value)
    data = readYML("#{Dir.home}/.aka/.config")
    if data.has_key?(value) == true
      old_path = data[value]
      data[value] = path
      writeYML("#{Dir.home}/.aka/.config", data)
      puts "data[#{value}] has #{old_path} changed to #{path}"
    else
      puts "error: --#{value} does not exist in #{Dir.home}/.aka/.config "
    end
  end

  def reload
    system "source #{readYML("#{Dir.home}/.aka/.config")["location"]}"
  end

  def readYML path
    return YAML.load_file(path)
  end

  def writeYML path, theyml
    File.open(path, 'w') {|f| f.write theyml.to_yaml } #Store
  end

  def write_with array
    File.open(readYML("#{Dir.home}/.aka/.config")["location"], 'w') { |file|
      array.each do |line|
        file.write(line)
      end
    }
  end

  def write_with_newline array
    File.open(readYML("#{Dir.home}/.aka/.config")["location"], 'w') { |file|
      array.each do |line|
        file.write(line + "\n")
      end
    }
  end

  def write str, path
    File.open(path, 'w') { |file| file.write(str) }
  end

  def append str, path
    File.open(path, 'a') { |file| file.write(str) }
  end

  def append_with_newline str, path
    File.open(path, 'a') { |file| file.write(str + "\n") }
  end

  def reload_dot_file
   system("kill -SIGUSR1 #{Process.ppid}")
  end

  def historywrite
    system "kill -SIGUSR2 #{Process.ppid}"
  end

  def unalias_the value
    system "echo '#{value}' > ~/sigusr1-args;"
    system "kill -SIGUSR2 #{Process.ppid}"
  end

  def split_domain_user fulldomain
    username = fulldomain.split("@").first
    domain = fulldomain.split("@")[1]
    return [username, domain]
  end

  def split fulldomain
    username = fulldomain.split("@").first
    domain = fulldomain.split("@")[1].split(":").first
    port = fulldomain.split("@")[1].split(":")[1]
    return [username, domain, port]
  end

  def add input
    if input and show_alias(input).first == false and not_empty_alias(input) == false
      array = input.split("=")
      full_command = "alias #{array.first}='#{array[1]}'".gsub("\n","") #remove new line in command
      print_out_command = "aka g #{array.first}='#{array[1]}'"
      File.open(readYML("#{Dir.home}/.aka/.config")["location"], 'a') { |file| file.write("\n" +full_command) }
      puts "    #{print_out_command} is added to #{readYML("#{Dir.home}/.aka/.config")["location"]}"
      return true
    else
      puts "The alias is already present."
      return false
    end
  end

  def not_empty_alias input
    array = input.split("=")
    return true if array.count < 2
    return array[1].strip == ""
  end

  def show_alias argument
    if content = File.open(readYML("#{Dir.home}/.aka/.config")["location"]).read
      content.gsub!(/\r\n?/, "\n")
      content_array = content.split("\n")
      content_array.each_with_index { |line, index|
        value = line.split(" ")
        if value.length > 1 and value.first == "alias"
          answer = value[1].split("=")
          if found?(answer.first, argument.split("=").first, line) == true
            return [true, answer.first, answer[1]]
          end
        end
      }
    else
      puts "#{@pwd} cannot be found.".red
      return [false, nil, nil]
    end
    return [false, nil, nil]
  end


  def createShortcut(proj)
    answer = ""
    proj["shortcuts"].to_a.each_with_index do |each,index|
      puts "hello there"
        answer += "#{each["name"]}
                    - #{each["command"]}
                    ".pretty
                    puts "hello wow"
        answer += "\n"
    end
    return answer
  end

  def add_last_command name
    command= find_last_command()
    return str = name + "=" + "#{command}"
  end

